<h1>レビュー</h1>
<h5><%= @assign.user.name %>さんへのレビューを書いてください</h5>

<%= form_for :review, url: reviews_path do |form| %>
  <div class="field" id="star">
    <%= form.label "星" %>
  </div>

  <div class="field">
    <%= form.label "コメント" %>
    <%= form.text_area :comment %>
  </div>

  <%= form.hidden_field :job_id, value: @assign.job.id %>
  <%= form.hidden_field :user_id, value: @assign.user.id %>

  <div class="actions">
    <%= form.submit "送信" %>
  </div>
<% end %>

<script>
$('#star').raty({
  size     : 36,
  starOff:  '<%= asset_path('star-off.png') %>',
  starOn : '<%= asset_path('star-on.png') %>',
  scoreName: 'review[rating]'
});
</script>