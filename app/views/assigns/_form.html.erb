<%= form_with(model: assign, local: true) do |form| %>
  <% if assign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assign.errors.count, "error") %> prohibited this assign from being saved:</h2>

      <ul>
      <% assign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :job_id %>
    <%= form.number_field :job_id %>
  </div>

  <div class="field">
    <% if user_signed_in? %>
      <input name="assign[user_id]" type="hidden" value=<%= current_user.id %>>
    <% else %>
      <%= form.label :user_id %>
      <%= form.number_field :user_id %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div class="actions">
    <%= form.submit :class=>"waves-effect waves-light btn" %>
  </div>
<% end %>
