<h1>仕事一覧</h1>

<table>
  <thead>
    <tr>
      <th>仕事名</th>
      <th>依頼主</th>
      <th>仕事内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= User.find_by(id: job.user_id).name %></td>
        <td><%= job.description %></td>
        <% assign = user_signed_in? && Assign.find_by(user_id: current_user.id, job_id: job.id) %>
        <% if !user_signed_in? || assign == nil %>
        <td>
          <%= button_to '参加',
            assigns_path,
            method: :post,
            params:{assign:{job_id: job.id, user_id: user_signed_in? ? current_user.id : -1, status: 'join'}},
            class: "waves-effect waves-light btn " + (!user_signed_in? ? "disabled" : ""),
            id: :join_form
          %>
        </td>
        <% else %>
        <td>
          <%= button_to (user_signed_in? && assign.status == 'complete') ? '完了済み' : '完了',
            assign_path(assign),
            method: :put,
            params:{assign:{status: 'complete'}},
            class: "red lighten-1 waves-effect waves-light btn " + (!user_signed_in? || assign.status == 'complete' ? "disabled" : "")
          %>
        </td>
        <% end %>
        <td><%= link_to '詳細ページ', job %></td>
        <% if user_signed_in? && (current_user.id == job.user.id) %>
        <td><%= link_to '編集', edit_job_path(job) %></td>
        <td><%= link_to '削除', job, method: :delete, data: { confirm: '本当に削除しても良いですか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
