<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <% if user_signed_in? %>
      <input name="job[user_id]" type="hidden" value=<%= current_user.id %>>
    <% end %>
  </div>
 
  <div class="field">
    <%= form.label :description %>
    <%= form.number_field :description %>
  </div>

  <div class="field">
    <%= form.label :reward %>
    <%= form.text_field :reward%>
  </div>
  
  <div class="field">
    <%= form.label :time %>
    <%= form.time_field :time%>
  </div>
  
  <div class="field">
    <%= form.label :limit_date %>
    <%= form.date_field :limit_date %>
  </div>
  
  <div class="field">
    <%= form.label :limit_time %>
    <%= form.time_field :limit_time %>
  </div>
  
  <div class="actions">
    <%= form.submit :class=>"waves-effect waves-light btn" %>
  </div>
<% end %>
